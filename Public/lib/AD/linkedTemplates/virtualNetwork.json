{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetwork": {
            "type": "string"
        },
        "vnet_addressPrefix": {
            "type": "object"
        },
        "loadbalancer": {
            "type": "string"
        },
        "adILB_IP": {
            "type": "string"
        },
        "subnet_Names": {
            "type": "object"
        },
        "subnet_addressPrefixes": {
            "type": "object"
        },
        "DNSServerAddress": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('virtualNetwork')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnet_addressPrefix').addr1]",
                        "[parameters('vnet_addressPrefix').addr2]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('DNSServerAddress')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet_Names').vpn]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').vpn]",
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').jumpBox]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').jumpBox]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('subnet_Names').jumpBox,'-nsg-','01'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').domain]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').domain]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('subnet_Names').domain,'-nsg-','02'))]"
                            },
                            "serviceEndpoints": [],
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').sql]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').sql]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('subnet_Names').sql,'-nsg-','03'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').sftp]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').sftp]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('subnet_Names').sftp,'-nsg-','04'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').wasabi]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').wasabi]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').wasabi,'-nsg-','05'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').tableau]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').tableau]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups', concat(parameters('subnet_Names').tableau,'-nsg-','06'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').RDP_Gateway]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').RDP_Gateway]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').RDP_Gateway,'-nsg-','07'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').Shared_File]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').Shared_File]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').Shared_File,'-nsg-','08'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').smtp]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').smtp]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').smtp,'-nsg-','09'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').Tenant_EMS]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').Tenant_EMS]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').Tenant_EMS,'-nsg-','10'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').Tenant_Workers]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').Tenant_Workers]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').Tenant_Workers,'-nsg-','11'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').Tenant_API]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').Tenant_API]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').Tenant_API,'-nsg-','12'))]"
                            },
                            "delegations": []
                        }
                    },
                    {
                        "name": "[parameters('subnet_Names').applicationGateway]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_addressPrefixes').applicationGateway]",
                            "networkSecurityGroup": {
                                "id": "[resourceId(resourcegroup().name, 'Microsoft.Network/networkSecurityGroups',concat(parameters('subnet_Names').applicationGateway,'-nsg-','13'))]"
                            },
                            "delegations": []
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('loadbalancer')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic"
            },
            "dependsOn": [
                "[parameters('virtualNetwork')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "LoadBalancerFrontEnd",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork'), parameters('subnet_Names').domain)]"
                            },
                            "privateIPAddress": "[parameters('adILB_IP')]"
                        }
                    }
                ]
            }
        }
    ]
}
