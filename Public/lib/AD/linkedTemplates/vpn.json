{
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vpnName": {
            "type": "string"
        },
        "vpnSku": {
            "type": "string"
        },
        "vpnConnection": {
            "type": "string",
            "defaultValue": "Vpn",
            "allowedValues": [
                "Vpn",
                "ExpressRoute"
            ]
        },
        "vpnType": {
            "type": "string",
            "defaultValue": "RouteBased",
            "allowedValues": [
                "RouteBased",
                "PolicyBased"
            ]
        },
        "VirtualNetworkName": {
            "type": "string"
        },
        "vpnSubnetName": {
            "type": "string"
        },
        "vpnPublicIpAddressName": {
            "type": "string"
        },
        "vpnClientAddressPoolPrefix": {
            "type": "string"
        },
        "RootCertName": {
            "type": "string"
        },
        "RootCertData": {
            "type": "string"
        },
        "revokedClientCertName": {
            "type": "string"
        },
        "revokedClientCertThumbprint": {
            "type": "string"
        }
    },
    "variables": {
        "vnetId": "[resourceId(resourcegroup().name,'Microsoft.Network/virtualNetworks', parameters('VirtualNetworkName'))]",
        "publicIPRef": "[resourceId('Microsoft.Network/publicIPAddresses/', parameters('vpnPublicIpAddressName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('vpnSubnetName'))]"
    },
    "resources": [
        {
            "apiVersion": "2018-08-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('vpnPublicIpAddressName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "apiVersion": "2018-08-01",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[parameters('vpnname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', parameters('vpnPublicIpAddressName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('SubnetRef')]"
                            },
                            "publicIPAddress": {
                                "id": "[variables('publicIPRef')]"
                            }
                        },
                        "name": "vnetGatewayConfig"
                    }
                ],
                "sku": {
                    "name": "[parameters('vpnsku')]",
                    "tier": "[parameters('vpnsku')]"
                },
                "gatewayType": "[parameters('vpnConnection')]",
                "vpnType": "[parameters('vpnType')]",
                "enableBgp": "false",
                "vpnClientConfiguration": {
                    "vpnClientAddressPool": {
                        "addressPrefixes": [
                            "[parameters('vpnClientAddressPoolPrefix')]"
                        ]
                    },
                    "vpnClientRootCertificates": [
                        {
                            "name": "[parameters('RootCertName')]",
                            "properties": {
                                "PublicCertData": "[parameters('RootCertData')]"
                            }
                        }
                    ],
                    "vpnClientRevokedCertificates": [
                        {
                            "name": "[parameters('revokedClientCertName')]",
                            "properties": {
                                "Thumbprint": "[parameters('revokedClientCertThumbprint')]"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
