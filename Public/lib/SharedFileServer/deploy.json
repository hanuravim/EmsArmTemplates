{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ApplicationName": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. nxt (Next Net), ems"
            }
        },
        "Environment_Category": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  DEV, QA, UAT and PRD"
            }
        },
        "shortlocation": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 char. E.g.  eastus=eus, eastus2=eu2, southcentralus=scu"
            }
        },
        "Tenant": {
            "type": "string",
            "maxLength": 5,
            "metadata": {
                "description": "3 char. E.g.  SRD"
            }
        },
        "Role": {
            "type": "string",
            "maxLength": 3,
            "metadata": {
                "description": "3 chars e.g. Front end (WEB), Storage (STR), Messaging (MSG), Network (NET), General (GEN) etc."
            }
        },
        "SupportEmail": {
            "type": "string"
        },
        "sharedFile_subnetName": {
            "type": "string"
        },
        "privateIpAddress": {
            "type": "string"
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "numberOfDataDisks": {
            "type": "int"
        },
        "DataDiskSize": {
            "type": "int"
        },
        "keyVault_Name": {
            "type": "string"
        },
        "keyVault_ResourceGroup": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "secretname_DomainAdminUserName": {
            "type": "string"
        },
        "secretname_DomainAdminPassword": {
            "type": "string"
        },
        "artifacts_baseUri": {
            "type": "string"
        }
    },
    "variables": {
        "uai": "uai2008973",
        "preserve": true,
        "StorageAccountType": "Standard_LRS",
        "resourceNames": {
            "commonResourceGroup": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-',parameters('tenant'),'-rgp-','01'))]",
            "virtualNetwork": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-net-','01'))]",
            "loganalyticsWorkspace": "[tolower(concat(parameters('ApplicationName'),'-',parameters('Environment_Category'),'-',parameters('shortlocation'),'-oms-','01'))]",
            "virtualmachine": "[toupper(concat(first(parameters('ApplicationName')),parameters('Environment_Category'),parameters('Tenant'),parameters('Role'),'0'))]"
        },
        "TemplateURLs": {
            "SharedFileServerTemplate": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/SharedFileServer/linkedTemplates/sfsVM.json')]",
            "domainJoinTemplate": "[concat(parameters('artifacts_baseUri'),'/EmsArmTemplates/master/Public/lib/SharedFileServer/linkedTemplates/domainJoin.json')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "SharedFileServer",
            "apiVersion": "2018-05-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateurls').SharedFileServerTemplate]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "vnetResourceGroup": {
                        "value": "[variables('resourcenames').commonResourceGroup]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('resourcenames').virtualNetwork]"
                    },
                    "sharedFile_subnetName": {
                        "value": "[parameters('sharedFile_subnetName')]"
                    },
                    "privateIpAddress": {
                        "value": "[parameters('privateIpAddress')]"
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "virtualMachineSize": {
                        "value": "[parameters('virtualMachineSize')]"
                    },
                    "StorageAccountType": {
                        "value": "[variables('StorageAccountType')]"
                    },
                    "numberOfDataDisks": {
                        "value": "[parameters('numberOfDataDisks')]"
                    },
                    "DataDiskSize": {
                        "value": "[parameters('DataDiskSize')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    },
                    "omsWorkspaceResourceGroup": {
                        "value": "[variables('resourcenames').commonResourceGroup]"
                    },
                    "omsWorkspaceName": {
                        "value": "[variables('resourcenames').loganalyticsWorkspace]"
                    },
                    "ApplicationName": {
                        "value": "[parameters('ApplicationName')]"
                    },
                    "SupportEmail": {
                        "value": "[parameters('SupportEmail')]"
                    },
                    "uai": {
                        "value": "[variables('uai')]"
                    },
                    "Environment_Category": {
                        "value": "[parameters('Environment_Category')]"
                    },
                    "preserve": {
                        "value": "[variables('preserve')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "resourcegroup": "[variables('resourceNames').commonResourceGroup]",
            "name": "domainJoin",
            "apiVersion": "2018-05-01",
            "dependsOn": [
                "SharedFileServer"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templateurls').domainJoinTemplate]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmCount": {
                        "value": 1
                    },
                    "virtualmachineName": {
                        "value": "[variables('resourcenames').virtualmachine]"
                    },
                    "domainName": {
                        "value": "[parameters('domainName')]"
                    },
                    "DomainAdminUserName": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminUserName')]"
                        }
                    },
                    "DomainAdminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[concat('/subscriptions/',subscription().subscriptionId,'/resourceGroups/',parameters('keyVault_ResourceGroup'),'/providers/Microsoft.KeyVault/vaults/',parameters('keyVault_Name'))]"
                            },
                            "secretName": "[parameters('secretname_DomainAdminPassword')]"
                        }
                    }
                }
            }
        }
    ]
}
